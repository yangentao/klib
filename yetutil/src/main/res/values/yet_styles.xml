<resources>

    <!-- Base application theme. -->
    <style name="yetTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yetColorPrimary</item>
        <item name="colorPrimaryDark">@color/yetColorPrimaryDark</item>
        <item name="colorAccent">@color/yetColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/yetColorPrimaryDark</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="yetTheme.NoActionBar"/>

    <style name="yetTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="yetTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
